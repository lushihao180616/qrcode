<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lushihao.qrcode.dao.QRTempleMapper">
    <insert id="create" parameterType="QRCodeTemple">
        INSERT INTO
            qrcodetemple
            (code,money,ifOnly,ifShowLogo,arti,width,height,x,y)
        VALUES
            (#{code},#{money},#{ifOnly},#{ifShowLogo},#{arti},#{width},#{height},#{x},#{y})
    </insert>
    <update id="update" parameterType="QRCodeTemple">
        UPDATE
            qrcodetemple
        SET
            money=#{money},
            ifOnly=#{ifOnly},
            ifShowLogo=#{ifShowLogo},
            arti=#{arti},
            width=#{width},
            height=#{height},
            x=#{x},
            y=#{y}
        WHERE
            code=#{code}
    </update>
    <delete id="delete">
        DELETE FROM
            qrcodetemple
        WHERE
            code=#{code}
    </delete>
    <select id="filter" resultType="QRCodeTemple">
        SELECT
            *
        FROM
            qrcodetemple
        <if test="code != null">
            WHERE code
            LIKE '${code}%'
        </if>
    </select>
</mapper>